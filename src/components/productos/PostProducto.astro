<h2 class="text-4xl text-center text-red-600 pt-8 py-2">
  Alta de Producto - (POST)
</h2>
<div class="bg-[#8d0909] text-yellow-400 p-4 pb-1 rounded-xl align-middle">
  <form id="form">
    <label class="text-base" for="name">Nombre del producto:</label><br />
    <input
      class="bg-gray-400 text-red-600 px-2 text-base"
      type="text"
      id="name"
      name="name"
    /><br />

    <label class="text-base" for="description">Descripcion del producto:</label
    ><br />
    <input
      class="bg-gray-400 text-red-600 px-2 text-base"
      type="text"
      id="description"
      name="description"
    /><br />

    <input
      class="bg-yellow-400 text-white my-4 px-4 py-1 rounded-md"
      type="submit"
      value="Alta"
    />
  </form>
  <script type="module">
    window.onload = function () {
      document
        .getElementById("form")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const name = document.getElementById("name").value;
          const description = document.getElementById("description").value;

          const response = await fetch("http://localhost:3000/products", {
            method: "POST",
            body: JSON.stringify({
              name: name,
              description: description,
            }),
            headers: { "Content-Type": "application/json" },
          });

          if (response.status == 201) {
            alert("Producto agregado exitosamente!");
            location.reload();
          } else {
            alert("Hubo un error al agregar el producto");
          }
        });
    };
  </script>
</div>
