---
let data = [{}];
let pais_name = "";
const pais = "El Salvador";
const url = `https://restcountries.com/v3.1/name/${pais}?fullText=true`;
const response = await fetch(url);
if (response.ok) {
  // true si el status es 200-299
  // Obtenemos el cuerpo (body) como un objeto json
  data = await response.json();
  pais_name = data[0]["maps"]["googleMaps"];

  console.log("json", pais_name);
} else {
  console.error("Error HTTP", response.status);
}

